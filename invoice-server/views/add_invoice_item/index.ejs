<!DOCTYPE html>
<html>
    <head>
        <link href="/css/style.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <h2><a href="/invoice/<%= invoice.id %>">Invoice <%= invoice.name %></a> > Add items</h2>
        <form action="/add_invoice_item/<%= invoice.id %>" method="post" id="form">
            <button type="submit" method="post">Add selected items</button>
            <table class="mytable" style="width: 100%;">
                <tr>
                    <th>Select</th>
                    <th>Date</th>
                    <th>Qty</th>
                    <th>Rate</th>
                    <th>Description</th>
                </tr>
                <% activities.forEach(function(activity) { %>
                <% if (activity.invoice_id != null) { %>
                <tr class="disabled">
                    <% } else { %>
                    <tr>
                        <% } %>
                        <td>
                            <% if (!activity.is_paid) { %>
                            <input type="checkbox" id="activity_<%= activity.id %>" name="activities" value="<%= activity.id %>">
                            <% } %>
                        </td>
                        <td><%= activity.date_str %></td>
                        <td><%= activity.qty %></td>
                        <td>$<%= activity.rate %></td>
                        <td><%= activity.description %></td>
                    </tr>
                    <% }); %>
            </table>
        </form>
    </body>
</html>
