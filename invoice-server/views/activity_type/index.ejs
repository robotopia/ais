<!DOCTYPE html>
<html>
    <head>
        <link href="/css/style.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
    </head>
    <body>
        <form action="/activity-type/<%= activity_type.id %>" method="post">
            <h2 class="nav"><a href="/">Home</a> > <a href="/activity-types">Activity types</a> > <input id="description" name="description" value="<%= activity_type.description %>" style="font-size: 16px" onChange="enableSave('save-button')" required></input> <button type="submit" method="post" class="btn-fa" id="save-button" disabled><i class="fa fa-save"></i></button></h2>
            <table class="mytable">
                <tr>
                    <td>Rate:</td>
                    <td><input id="rate" name="rate" value="<%= activity_type.rate %>" onChange="enableSave('save-button')"></td>
                </tr>
            </table>
        </form>
        <% if (activity_type.id != "new") { %>
        <div class="page-action">
            <form action="/activity-type/delete/<%= activity_type.id %>" method="post">
                <button class="delete-button"><i class="fa fa-trash"></i></button>
            </form>
        </div>
        <% } %>
    </body>
    <script type="text/javascript" src="/scripts/enable-save.js"></script>
</html>
