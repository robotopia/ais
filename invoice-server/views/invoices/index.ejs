<!DOCTYPE html>
<html>
    <head>
        <%- include('../partials/head'); %>
    </head>
    <body>
        <%- include('../partials/sidebar'); %>

        <div class="w3-main" style="margin-left:200px">
            <div>
                <button class="w3-button w3-xlarge w3-hide-large" onclick="w3_open()">&#9776;</button>
                <div class="w3-container">
                    <h2 class="nav"><a href="/">Home</a> > Invoices</h2>
                </div>
            </div>

            <div class="w3-container">
                <table class="mytable">
                    <tr>
                        <th>Name</th>
                        <th>Issued</th>
                        <th>Total amount</th>
                        <th>Paid</th>
                    </tr>
                    <% invoices.forEach(function(invoice) { %>
                    <tr>
                        <td><a href="invoice/<%= invoice.id %>"><%= invoice.name %><a></td>
                        <td><%= invoice.issued %></td>
                        <td>$<%= invoice.total_amount %></td>
                        <td><%= invoice.paid %></td>
                    </tr>
                    <% }); %>
                </table>
                <div class="page-action">
                    <a href="/invoice/new" class="add-button"><i class="fa fa-circle-plus"></i></a>
                </div>
            </div>
        </div>
    </body>
</html>
