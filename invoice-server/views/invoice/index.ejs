<!DOCTYPE html>
<html>
    <head>
        <link href="/css/style.css" rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    </head>
    <body>
        <h1 style="text-align: center;">INVOICE (<%= title_date %>)</h1>
        <div style="border: 1px solid #000; padding: 8px;">
            <table class="billing-table" style="width: 100%;">
                <tr>
                    <td><b><%= invoice[0].name %></b><br><%= invoice[0].addr1 %><br><%= invoice[0].addr2 %></td>
                    <td style="text-align: right;">Ph:<br>Email:<br>ABN:</td>
                    <td><%= invoice[0].phone %><br><%= invoice[0].email %><br><%= invoice[0].abn %> (Not GST Registered)</td>
                </tr>
            </table>
        </div>
        <div style="border: 1px solid #000; padding: 8px;">
            <h3>Bill to</h3>
            <%= invoice[0].bill_to %>
        </div>
        <div style="border: 1px solid #000; padding: 8px;">
            <h3>Summary
                <% if (invoice[0].is_paid) { %>
                <i class="fa fa-check" style="color: green;"></i>
                <% } %>
            </h3>
            <table>
                <tr>
                    <td>Date:</td>
                    <td><%= invoice[0].issued %></td>
                </tr>
                <tr>
                    <td>Amount owing:</td>
                    <td>$<%= total_amount %></td>
                </tr>
                <tr>
                    <td>Due date:</td>
                    <td><%= invoice[0].due %></td>
                </tr>
                <% if (invoice[0].is_paid) { %>
                <tr>
                    <td>Paid:</td>
                    <td><%= invoice[0].paid %></td>
                </tr>
                <% } %>
            </table>
        </div>
        <div>
            <table class="mytable">
                <tr>
                    <th>Date</th>
                    <th>Qty</th>
                    <th>Rate</th>
                    <th>Description</th>
                    <th>Amount</th>
                </tr>
                <% invoice_items.forEach(function(invoice_item) { %>
                <tr>
                    <td><%= invoice_item.date_str %></td>
                    <td><%= invoice_item.qty %></td>
                    <td>$<%= invoice_item.rate %></td>
                    <td><%= invoice_item.description %></td>
                    <td>$<%= invoice_item.amount %></td>
                </tr>
                <% }); %>
                <tr>
                    <td style="opacity: 0; border: 0px;"></td>
                    <td style="opacity: 0; border: 0px;"></td>
                    <td style="opacity: 0; border: 0px;"></td>
                    <td style="border: 0px; text-align: right;"><strong>Total:</strong></td>
                    <td>$<%= total_amount %></td>
                </tr>
            </table>
        </div>
        <div style="border: 1px solid #000; padding: 8px;">
            <h3>Payment Options:</h3>
            <h4>Electronic Transfer:</h4>
            <table>
                <tr>
                    <td>BSB:</td>
                    <td><%= invoice[0].bsb %></td>
                </tr>
                <tr>
                    <td>Account No.:</td>
                    <td><%= invoice[0].number %></td>
                </tr>
                <tr>
                    <td>Account Name:</td>
                    <td><%= invoice[0].account_name %></td>
                </tr>
            </table>
        </div>
    </body>
</html>
